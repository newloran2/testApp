<resources>
    <!-- Base application theme. -->
    <style name="Theme.UOLTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/grey_900</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryVariant">@color/grey_500</item>
        <item name="colorOnPrimary">@color/grey_100</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/grey_100</item>
        <item name="colorOnSecondary">@color/grey_900</item>

        <item name="android:colorBackground">@color/grey_800</item>
        <item name="colorSurface">@color/grey_900</item>
    </style>

    <style name="DefaultButton">
        <item name="backgroundTint">@color/grey_100</item>
        <item name="android:textColor">@color/grey_900</item>
    </style>
    <style name="TextColorPrimary">
        <item name="android:textColor">@color/grey_50</item>
        <item name="drawableTint">@color/grey_50</item>
    </style>
    <style name="TextColorSecondary">
        <item name="android:textColor">@color/grey_300</item>
        <item name="drawableTint">@color/grey_300</item>
    </style>
    <style name="TextColorTertiary">
        <item name="android:textColor">@color/grey_600</item>
        <item name="drawableTint">@color/grey_600</item>
    </style>
</resources>